---
import BaseLayout from "../layouts/BaseLayout.astro"
---

<BaseLayout>
	<div class="flex flex-col h-full items-center justify-center">
		<div class="grid lg:grid-cols-4 lg:grid-rows-8 max-w-screen-xl p-10 gap-5">
			<div class="text-white border p-5 lg:col-start-1 lg:col-span-3 lg:row-start-1 lg:row-span-3 flex flex-col lg:flex-row items-center">
				<div class="w-full h-full text-left flex flex-col justify-between">
					<div>
						<h1 class="font-extralight">Greetings</h1>
						<p class="font-light text-sm lg:text-md">
							Hi, I'm <span class="font-bold">Aaron Adame</span>
							, a software developer with strong focus on the user experience, animations and micro interactions.
						</p>
						<p class="font-light text-sm lg:text-md pt-2">
							Feel free to reach out to me if you have any projects in mind, or just to say hello.
						</p>
					</div>
					<div class="grid grid-cols-2 lg:flex">
						<button type="button" class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700">Dark</button>
						<button type="button" class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700">Dark</button>
						<button type="button" class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700">Dark</button>
						<button type="button" class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700">Dark</button>
						<button type="button" class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700">Dark</button>
						<button type="button" class="text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700">Dark</button>
					</div>
				</div>
				<div class="w-full lg:w-1/3 h-full border">

				</div>
			</div>
			<div class="text-white border p-5 lg:row-start-1 lg:row-span-5 flex flex-col">
				<h1 class="font-bold">About me</h1>
				<p></p>
			</div>
			<div class="text-white border p-5 lg:row-start-4 lg:row-span-4 flex flex-col items-center">
				3rd item
			</div>
			<div class="text-white border p-5 flex flex-col items-center">
				4th item
			</div>
			<div class="text-white border p-5 flex flex-col items-center">
				5th item
			</div>
			<div class="text-white border p-5 lg:row-start-5 lg:row-span-2 flex flex-col items-center">
				6th item
			</div>
			<div class="text-white border p-5 flex flex-col items-center">
				7th item
			</div>
			<div class="text-white border p-5 flex flex-col items-center">
				8th item
			</div>
			<div class="text-white border p-5 flex flex-col items-center">
				9th item
			</div>
			<div class="text-white border p-5 flex flex-col items-center">
				10th item
			</div>
			<div class="text-white border p-5 flex flex-col items-center">
				11th item
			</div>
			<div class="text-white border p-5 flex flex-col items-center">
				12th item
			</div>
		</div>
	</div>
</BaseLayout>