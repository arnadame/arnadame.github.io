  <script>
      import moment from 'moment-timezone';

      const userTimezone = moment.tz.guess();
      function updateDateTime(){
        const currentTime = moment().tz(userTimezone).format('LTS');
        const currentDate = moment().tz(userTimezone).format('LL')
  
        const cd = document.querySelector('#currentDate')
        const ct = document.querySelector('#currentTime')
        if (cd) {
          cd.textContent=currentDate
        }
        if (ct) {
          ct.textContent=currentTime
        }
      }

      updateDateTime();
      setInterval(updateDateTime, 1000);

  </script>
